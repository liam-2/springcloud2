<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.george.springcloud.dao.RoleDao">

	<resultMap id="RolementMap" type="com.george.springcloud.domain.RoleDomain">
		<id column="id" property="id" jdbcType="BIGINT"/>
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
		<result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP"/>
		<result column="version" property="version" jdbcType="INTEGER"/>
		<result column="parent_id" property="parentId" jdbcType="BIGINT"/>
		<result column="name" property="name" jdbcType="VARCHAR"/>
		<result column="code" property="code" jdbcType="VARCHAR"/>
		<result column="sort" property="sort" jdbcType="INTEGER"/>
		<result column="remark" property="remark" jdbcType="VARCHAR"/>
		<result column="is_disable" property="isDisable" jdbcType="TINYINT"/>
		<result column="is_delete" property="isDelete" jdbcType="TINYINT"/>
	</resultMap>

	<insert id="increaseRole" parameterType="com.george.springcloud.domain.RoleDomain" >
		insert into sys_role(parent_id,name,code,sort,remark)
		values(#{roleDomain.parentId},
		       #{roleDomain.name},
		       #{roleDomain.code},
			   #{roleDomain.sort},
		       #{roleDomain.remark});
	</insert>

	<update id="deleteRoleById" parameterType="Long">
		update sys_role set is_delete=1,version=version+1 where id=#{id};
	</update>

	<update id="updateRole" parameterType="com.george.springcloud.domain.RoleDomain">
		update sys_role set version=version+1,
		                    parent_id=#{roleDomain.parentId},
		                    name=#{roleDomain.name},
		                    code=#{roleDomain.code},
							sort=#{roleDomain.sort},
		                    remark=#{roleDomain.remark}
		where id=#{roleDomain.id} and is_delete=0;
	</update>





</mapper>
